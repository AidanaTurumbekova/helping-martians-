TOTAL_WEIGHT = 713

boxes = [[1, 300], [3, 200], [5, 213]]  # locations and weights

print("Welcome to the Martian Cargo Finder!")
print("You need to guess the locations (kilometer marks) of the boxes.")
print("Enter 3 kilometer marks where you think the boxes are buried.")
while True:
    guess_1 = int(input("Guess 1: "))
    guess_2 = int(input("Guess 2: "))
    guess_3 = int(input("Guess 3: "))
    guesses = [guess_1, guess_2, guess_3]

    found_weights = []
    for guess in guesses:
        for box in boxes:
            if guess == box[0]: 
                found_weights.append(box[1])

total_found_weight = sum(found_weights)

 if total_found_weight == TOTAL_WEIGHT:
        print("Congratulations! You found all the cargo!")
        break
    else:
        print("Incorrect! Try again.")

