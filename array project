import random 
TOTAL_WEIGHT = 713

boxes = [[1, 300], [3, 200], [5, 213]]  # locations and weights

print("Welcome to the Martian Cargo Finder!")
print("You need to guess the locations (kilometer marks) of the boxes.")
print("Enter 3 kilometer marks where you think the boxes are buried.")
guess_1 = int(input("Guess 1: "))
guess_2 = int(input("Guess 2: "))
guess_3 = int(input("Guess 3: "))

user_guesses = [guess_1, guess_2, guess_3]
def check_guesses(guesses, boxes):
    found_weights = []
    for guess in guesses:
        for box in boxes:
            if guess == box[0]: 
                found_weights.append(box[1])
    return found_weights

found_weights = check_guesses(user_guesses, boxes)
total_found_weight = sum(found_weights)

print(f"You found boxes weighing: {found_weights}")
print(f"Total weight of found boxes: {total_found_weight} kg")
def shuffle_boxes(boxes):
    for box in boxes:
        box[0] = random.randint(1, 7)  # Randomly relocate the box within 7 km

if total_found_weight != TOTAL_WEIGHT:
    print("Incorrect! The boxes have moved to new locations.")
    shuffle_boxes(boxes)


